<header>
    <h1>
        PELIMANIA "LA RIPOLL"
    </h1>
</header>
<h2>CART CONTENT</h2>

{{#if products.length}}
    <div class="product-cards">
        {{#each products}}
        <div class="product-card">
            <h4>TITLE: {{product.title}}</h4>
            <p>DESCRIPTION: {{product.description}}</p>
            <img src="{{product.thumbail}}" alt="{{product.title}}">
            <div class="botonesQuantity">

                <button class="add-to-cart-btn" onclick="deleteOne('{{cid}}','{{product._id}}')">-</button>

                <p> QUANTITY: {{quantity}}</p>

                <button class="add-to-cart-btn" onclick="addProductToCart('{{cid}}','{{product._id}}')">+</button>

            </div>
            <p>CATEGORY: {{product.category}}</p>
            <button class="add-to-cart-btn" data-product-id="{{product._id}}" onclick="deleteAll('{{cid}}')">Remove all to Cart</button>
        </div>
        {{/each}}

    </div>

{{else}}
    <p>No products available.</p>
{{/if}}
