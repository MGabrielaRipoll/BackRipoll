<header>
    <h1>
        PELIMANIA "LA RIPOLL"
    </h1>
</header>



{{#if user}}
    <div class="userDiv">
        <div class="user-info">
            {{#if avatar}}
                <img src="/docs/profiles/{{avatar}}" alt="User Profile Image">
            {{else}}
                <img src="/docs/profiles/avatarrandom.png" alt="User Profile Image">
            {{/if}}
            <div class="user-details">
                <h2>WELCOME {{user.name}}</h2>
                <h4>Your email is: {{user.email}} </h4>
            </div>
        </div>
        {{!-- <h2>WELCOME {{name}}</h2>
        <h4>Your email is: {{email}} </h4> --}}
        <button class="boton"><a href="/api/session/signout">SIGN OUT</a></button>
        <input type="hidden" name="token" id="token" value="{{token}}">
        <button class="boton"><a href="/api/views/realTimeProducts">Access DBA</a></button>
        <button class="boton"><a href="/api/views/users">ADMIN</a></button>
        <button class="boton"><a href="/api/views/users/{{uid}}">Mi perfil</a></button>
    </div>


{{/if}}

<div class="carrito">
    <a href="/api/views/carts/{{cartId}}" id="carritoLink">
        <img class="imagen-carrito" src="https://cdn.pixabay.com/photo/2014/05/21/13/25/shopping-cart-349544_640.png" alt="Carrito de compras">
    </a>
    <span id="contadorCarrito"> {{quantity}} </span>
    <input type="hidden" id="cartId" value="{{ cartId }}">

</div>


{{#if products.length}}
    <div class="product-cards">
        {{#each products}}
        <div class="product-card">
            <h4>TITLE: {{title}}</h4>
            <p>DESCRIPTION: {{description}}</p>
            <p>PRICE: ${{price}}</p>
            <img src="{{thumbail}}" alt="{{title}}">      
            <button class="boton"><a href="/api/views/products/{{_id}}">VER MAS</a></button>

        </div>
        {{/each}}
    </div>

